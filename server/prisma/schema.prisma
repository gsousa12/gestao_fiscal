generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // DATABASE_URL no .env
}

model Company {
  id        Int      @id @default(autoincrement())
  name      String
  taxNumber String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}